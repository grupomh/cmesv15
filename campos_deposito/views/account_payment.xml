<odoo>
    <record id="account_payment_form_inherit" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="forma_pago" widget="selection" groups="product_weight_extend.group_weight" />
                <field name="type_bank" attrs="{'invisible':[('forma_pago', '!=', 'cheque_ajeno')], 'required':[('forma_pago', '=', 'cheque_ajeno')]}"/>
                <field name="boleta" groups="product_weight_extend.group_weight" required="1"/>
            </xpath>
        </field>
    </record>

