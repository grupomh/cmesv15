<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_kardex_kardex_tree" model="ir.ui.view">
            <field name="name">view.kardex.kardex.tree</field>
            <field name="model">kardex.stock</field>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Kardex" create="false" edit="false" import="false" export_xlsx="0">
                    <field name="asiento" />
                    <field name="fecha" />
                    <field name="tipo_doc" />
                    <field name="no_doc" />
                    <field name="no_fuente" />
                    <field name="ubi_origen" />
                    <field name="ubi_dest" />
                    <field name="client" />
                    <field name="category" />
                    <field name="uom" />
                    <field name="cost_uni" />
                    <field name="qty_transf" />
                    <field name="qty_entrada" />
                    <field name="qty_salida" />
                    <field name="cost_entrada" />
                    <field name="cost_salida" />
                    <field name="product" optional="hide"/>
                    <field name="month" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>



        <record id="view_kardex_stock_search" model="ir.ui.view">
            <field name="name">view.kardex.stock.search</field>
            <field name="model">kardex.stock</field>
            <field name="arch" type="xml">
                <search string="Busqueda kardex stock">
                    <field name="product" string="Producto"/>                    
                    <separator/>
                    <separator/>
                    <group name="group_by_custom_modules" string="Group by">
                        <filter name="group_by_date" string="Por Fecha" context="{'group_by': 'fecha'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="action_kardex_stock_h" model="ir.actions.act_window">
            <field name="name">Kardex</field>
            <field name="res_model">kardex.stock</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_kardex_kardex_tree"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    kardex
                </p>
            </field>
        </record>
        <menuitem id="menu_action_kardex_stock_hi" 
                    name="Kardex"
                    action="action_kardex_stock_h"
                    parent="stock.menu_warehouse_report" 
                    sequence="8"/>
        

    </data>
</odoo>

