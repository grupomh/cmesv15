<!-- view specific to product.template -->
<openerp>
    <data> 





       





        <record id="exhobby_sale_approve_view_inherit" model="ir.ui.view">
            <field name="name">exhobby_sale_approve_view_inherit</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="8" />
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <button name="payment_action_void" position="after">
                    <button name="button_toapprove" type="object" states="to approve" string="Approve" class="oe_highlight" id="bid_toapprove" groups="sales_team.group_sale_manager"/>  		 
                    <button name="action_cancel" states="to approve" type="object" string="Cancel"/>
                    <button name="button_unlock" type="object" string="Unlock" states="done" groups="sales_team.group_sale_manager"/>

                </button>

	    </field>
        </record>
        
        
        <record id="action_order_approve" model="ir.actions.act_window">
            <field name="name">To Be Approve Sale Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','to approve')]</field>
            <field name="filter" eval="True"/>
        </record>
        
        <menuitem action="action_order_approve" id="menu_sale_order_confirm" parent="sale.sale_order_menu" sequence="99" groups="sales_team.group_sale_manager"/>
        
    </data>
</openerp>
