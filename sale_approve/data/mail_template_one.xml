<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="email_send_approve" model="mail.template">
        <field name="name">Aprobacion de presupuesto Gerente</field>
        <field name="email_from">{{ (object.user_id.email_formatted or user.email_formatted) }}</field>
        <field name="subject">Se solicita aprobacion de presupuesto {{object.name}}</field>
        <field name="email_to">{{object.partner_id.user_id.employee_id.parent_id.work_email}}</field>
        <field name="model_id" ref="sale_approve.model_sale_order"/>        
        <field name="auto_delete" eval="True"/>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Hola,
                    <br/>
                    <br/>
                    El presupuesto <strong t-out="object.name or ''"/> por un importe de <strong t-out="format_amount(object.amount_total, object.pricelist_id.currency_id) or ''"/>
                    <br/>
                    <br/>
                    Esta en la espera de su aprobaci√≥n.
                    <br/>
                    <br/>
                    Saludos.
                </p>
            </div>
        </field>
    </record>

    <record id="email_send_approve_two" model="mail.template">
        <field name="name">Venta aprobada mensaje</field>
        <field name="email_from">{{object.partner_id.user_id.employee_id.parent_id.work_email}}</field>
        <field name="subject">El presupuesto {{object.name}} aprobado</field>
        <field name="email_to">{{ (object.user_id.email_formatted or user.email_formatted) }}</field>
        <field name="model_id" ref="sale_approve.model_sale_order"/>        
        <field name="auto_delete" eval="True"/>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Hola,
                    <br/>
                    <br/>
                    El presupuesto <strong t-out="object.name or ''"/> por un importe de <strong t-out="format_amount(object.amount_total, object.pricelist_id.currency_id) or ''"/>
                    <br/>
                    del cliente <strong t-out="object.partner_id.name or ''"/>
                    <br/>
                    <br/>
                    Ya fue confirmado, para que pueda darle el seguimiento respectivo.
                    <br/>
                    <br/>
                    Saludos.
                </p>
            </div>
        </field>
    </record>
</odoo>