<odoo>
    <data>
    <record id="dias_factura_vencida" model="ir.ui.view">
        <field name="name">dias.factura.vencida</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
                    <field name="fiscal_position_id" position="after">
                        <field name="dias_vencidos"/>
                        <!-- <field name="payment_date" invisible="1"/>
                        <field name="payment_days" string="Dias de Pago"/> -->
                    </field>
                </field>
    </record>

            <record id="view_factura_vencida_tree" model="ir.ui.view">
                <field name="name">view.factura.vencida.tree</field>
                <field name="model">account.move</field>
                <field name="inherit_id" ref="account.view_invoice_tree"/>
                <field name="arch" type="xml">
                            <xpath expr="//field[@name='invoice_date_due']" position="after">
                                <field name="dias_vencidos"/>
                                <!-- <field name="payment_date" invisible="1"/>
                                <field name="payment_days" string="Dias de Pago"/> -->
                            </xpath>
                        </field>
                </record>
        </data>
    </odoo>