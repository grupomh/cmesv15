<odoo> 
        <record id="custom_product_user" model="res.groups">
            <field name="name">Product / User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
        
        <record id="hidden_action_cancel" model="res.groups">
            <field name="name">Ocultar Boton cancelar</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_update_sale_prices" model="res.groups">
            <field name="name">Editar Precios de Ventas</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="group_update_cost_prices" model="res.groups">
            <field name="name">Editar Costos de productos</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record model="res.groups" id="group_contact_creation">
            <field name="name">Crear contactos</field>
            <field name="category_id" ref="base.module_category_usability"/>
            <field name="implied_ids" eval="[(4, ref('base.group_partner_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record model="res.groups" id="group_product_creation">
            <field name="name">Crear productos</field>
            <field name="category_id" ref="base.module_category_usability"/>
        </record>

        <record model="res.groups" id="group_access_product">
            <field name="name">Accesos a productos</field>
            <field name="category_id" ref="base.module_category_usability"/>
        </record>
</odoo>


