<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- purchase.order inherit form view -->
        <record id="purchase_order_form_extend" model="ir.ui.view">
            <field name="name">purchase.order.form.extend</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <button name="button_cancel" position="attributes">
                    <attribute name="groups">custom_melgees.hidden_action_cancel</attribute>
                </button>
                <button name="button_draft" position="attributes">
                    <attribute name="groups">custom_melgees.hidden_action_cancel</attribute>
                </button>

                <field name="partner_id" position="attributes">
                    <attribute name="options">{'no_quick_create': True}</attribute>
                </field>
                <xpath expr="//tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_quick_create': True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>