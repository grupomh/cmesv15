<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- res.company inherit form view -->
        <record id="view_company_form_extends" model="ir.ui.view">
            <field name="name">view.company.form.extends</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="favicon" position="after">
                    <field name="apply_credit_limit" groups="partner_credit_limit.group_access_credit_limit"/>
                </field>
            </field>
        </record>
    </data>
</odoo>