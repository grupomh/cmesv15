<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="account_slip_tree_view_ext" model="ir.ui.view">
            <field name="name">account.slip.tree.ext.view</field>
            <field name="model">account.slip</field>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Account-Slips">
                    <field name="name" string="Ref. No."/>
                    <field name="partner_id" string="Empresa"/>
                    <field name="account_slip_type" invisible="1"/>
                    <field name="issue_date" string="Fecha"/>
                    <field name="due_date" string="Fecha Vencimiento"/>
                    <field name="slip_paid_amount" string="Monto Pagado"/>
                    <field name="slip_outstanding_amount" string="Saldo Pendiente"/>
                    <field name="slip_total_amount" string="Monto Total"/>
                    <field name="company_id" invisible="0"/>
                </tree>
            </field>
        </record>

        
        <record id="payment_slip_form_view" model="ir.ui.view">
            <field name="name">payment.slip.form</field>
            <field name="model">account.slip</field>
            <field name="arch" type="xml">
                <form string="Payment Slip">
                    <header>
                        <button name="action_validate" string="Validar" type="object" class="oe_highlight" attrs="{'invisible':[('state','in',['open', 'paid', 'cancel'])]}" groups="purchase.group_purchase_user,account.group_account_invoice"/>
                        <button name="action_cancel" string="Cancelar" type="object" attrs="{'invisible':[('state','not in',['draft', 'open'])]}" groups="purchase.group_purchase_user,account.group_account_invoice"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group name="main_group">
                            <group name="main_group_left">
                                <field name="partner_id" string="Empresa" attrs="{'readonly': [('state', 'in', ['open', 'paid'])]}"/>
                                <field name="account_slip_type" invisible="1"/>
                                <field name="issue_date" string="Fecha" attrs="{'readonly': [('state', 'in', ['open', 'paid'])]}"/>
                                <field name="company_id" attrs="{'readonly': [('state', 'in', ['open', 'paid'])]}"/>
                                <field name="user_id" string="Responsable"/>
                            </group>
                            <group name="main_group_right">
                                <field name="due_date" string="Fecha Vencimiento" attrs="{'readonly': [('state', 'in', ['open', 'paid'])]}"/>
                                <field name="pay_day" string="Día de Pago" attrs="{'readonly': [('state', 'in', ['open', 'paid'])]}"/>
                                <field name="date_of_payment" string="Fecha de Pago" attrs="{'readonly': [('state', 'in', ['open', 'paid'])]}"/>
                            </group>
                        </group>
                        <group name="invoices" string="Facturas">
                            <field name="invoice_ids" nolabel="1" domain="[('move_type', '=', 'in_invoice'),('partner_id', '=', partner_id)]" attrs="{'readonly': [('state', 'in', ['open', 'paid'])]}" options="{'no_create':True}"/>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="slip_total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="slip_paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="slip_outstanding_amount"/>
                                </div>
                                <field name="slip_outstanding_amount" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </group>
                        <div>
                            <field name="notes" placeholder="Notas adicionales..."/>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="account_slip_search_view" model="ir.ui.view">
            <field name="name">account.slip.search</field>
            <field name="model">account.slip</field>
            <field name="arch" type="xml">
                <search>
                    <field name="partner_id" filter_domain="['|', ('partner_id', 'ilike', self),('partner_id.name', 'ilike', self)]" string="Partner"/>
                    <field name="name" filter_domain="[('name', 'ilike', self)]" string="Reference"/>
                    <group>
                        <filter string="Empresa" name="partner" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Estado" name="state" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Fecha Vencimiento" name="due_date" domain="[]" context="{'group_by':'due_date'}"/>
                    </group>
                </search>
            </field>
        </record>


        
        <record id="action_account_payment_slip" model="ir.actions.act_window">
            <field name="name">Contraseñas de Pago</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.slip</field>
            <field name="view_id" ref="account_slip_tree_view_ext"/>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('account_slip_type', '=', 'payment_slip')]</field>
            <field name="context">{'default_account_slip_type': 'payment_slip'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear nuevos registro
                </p>
            </field>
        </record>

        <!-- <record model="ir.actions.act_window.view" id="action_account_collection_slip_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account_slip_tree_view"/>
            <field name="act_window_id" ref="action_account_payment_slip"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_account_collection_slip_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="payment_slip_form_view"/>
            <field name="act_window_id" ref="action_account_payment_slip"/>
        </record> -->

       
        <!-- <menuitem action="action_account_payment_slip" id="menu_payment_slip_ext"
                parent="account.menu_finance_payables" string="Contraseñas de Pago" sequence="21"/> -->
        <menuitem 
            id="menu_payment_slip_ext" 
            name="Contraseñas de Pago"
            action="action_account_payment_slip"
            parent="account.menu_finance_payables" 
            sequence="21"/>
    </data>
</odoo>
