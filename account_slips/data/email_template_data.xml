<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="email_template_collection_slip" model="mail.template">
        <field name="name">Collection Slip: Send by email</field>
        <field name="model_id" ref="account_slips.model_account_slip"/>
        <field name="email_from">${object.company_id.email_formatted |safe}</field>
        <field name="partner_to">${object.partner_id.id}</field>
        <field name="subject">Collection Slip ${object.name}</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">

                    Dear ${object.partner_id.name}
                    <br /><br />
                    Here is your Collection Slip with outstanding amount of <strong>${format_amount(object.slip_outstanding_amount, object.currency_id)}</strong> from ${object.name} and It's due date is ${object.pay_day}.
                    <br /><br />
                    Do not hesitate to contact us if you have any questions.

                    <br /><br />
                    Regards,
                    <br />
                    ${object.company_id.name |safe}
                </p>
            </div>
        </field>
        <field name="report_template" ref="action_report_collection_slip"/>
        <field name="report_name">${(object.name or '').replace('/','_')}</field>
        <field name="lang">${object.partner_id.lang}</field>
        <!-- <field name="user_signature" eval="False"/> -->
        <field name="auto_delete" eval="False"/>
    </record>

    <record id="email_template_payment_slip" model="mail.template">
        <field name="name">Payment Slip: Send by email</field>
        <field name="model_id" ref="account_slips.model_account_slip"/>
        <field name="email_from">${object.company_id.email_formatted |safe}</field>
        <field name="partner_to">${object.partner_id.id}</field>
        <field name="subject">Payment Slip : ${object.name}</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">

                    Dear ${object.partner_id.name}
                    <br /><br />
                    Here is your Payment Slip with outstanding amount of <strong>${format_amount(object.slip_outstanding_amount, object.currency_id)}</strong> from ${object.name} and It's due date is ${object.pay_day}.
                    <br /><br />
                    Do not hesitate to contact us if you have any questions.

                    <br /><br />
                    Regards,
                    <br />
                    ${object.company_id.name |safe}
                </p>
            </div>
        </field>
        <field name="report_template" ref="action_report_collection_slip"/>
        <field name="report_name">${(object.name or '').replace('/','_')}</field>
        <field name="lang">${object.partner_id.lang}</field>
        <!-- <field name="user_signature" eval="False"/> -->
        <field name="auto_delete" eval="False"/>
    </record>

</odoo>