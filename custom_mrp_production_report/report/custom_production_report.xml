<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="action_report_custom_mrp_production">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <center>
                            <h4>Entrega de tandas parciales</h4>
                            <h5>Orden # <span t-field="o.name"/></h5>
                        </center>                        
                        <div id="informations" class="row mt32 mb32">
                            <div class="col-3 bm-2">
                                <strong>Fecha planificada:</strong>
                                <p t-field="o.date_planned_start" class="m-0"/>                                
                            </div>
                            <div class="col-5 bm-2">
                                <strong>Producto:</strong>
                                <p t-field="o.product_id" class="m-0"/>
                            </div>
                            <div class="col-2 bm-2">
                                <strong>Cantidad Plan.:</strong>
                                <p t-field="o.product_qty" class="m-0"/>
                            </div>
                            <div class="col-2 bm-2">
                                <strong>Faltan:</strong>
                                <p t-field="o.qty_total_dif" class="m-0"/>
                            </div>
                        </div>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th name="th_lote"><strong>Lote</strong></th>
                                    <th name="th_uom"><strong>Fecha registro</strong></th>
                                    <th name="th_uom"><strong>Unidad de medida</strong></th>
                                    <th name="th_cantidad"><strong>Cantidad entregada</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- <t t-set="current_subtotal" t-value="0"/> -->
                                <t t-set="c_date" t-value="0"/>
                                <t t-foreach="o.finished_move_line_ids2" t-as="line">
                                    <tr t-if="line.print_check">
                                        <td name="td_lote">
                                            <span t-field="line.lot_id"/>                                            
                                        </td>
                                        <td name="td_cdate">
                                            <span t-field="line.date"/>
                                            <t t-set="c_date" t-value="line.date.strftime('%d/%m/%Y %H:%M')"/>
                                        </td>
                                        <td name="td_uom">
                                            <span t-field="line.product_uom_id"/>
                                        </td>
                                        <td name="td_cantidad">
                                            <span t-field="line.qty_done"/>
                                            <!-- <t t-set="current_subtotal" t-value="current_subtotal + line.qty_done"/> -->
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div id="total" class="row justify-content-end">
                            <div class="col-4">
                                <table class="table table-sm">
                                    <!-- <tr class="border-black o_total">
                                        <td name="td_total_mount_label"><strong>Total entregado</strong></td>
                                        <td class="text-right">
                                            <span t-esc="current_subtotal"/>
                                            <t t-set="current_dif" t-value="current_subtotal - o.product_qty"/>
                                        </td>
                                    </tr> -->
                                    <!-- <tr class="border-black o_total">
                                        <td name="td_total_mount_label"><strong>Pendiente</strong></td>
                                        <td class="text-right">
                                            <span t-esc="abs(current_dif)"/>
                                        </td>
                                    </tr> -->
                                </table>                                
                            </div>                           
                        </div>
                        <!-- Segunda tabla -->
                        <center>
                            <h4>Detalle de tandas parciales</h4>
                        </center> 
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th name="th_producto"><strong>Producto</strong></th>
                                    <th name="th_lote"><strong>Lote</strong></th>
                                    <!-- <th name="th_uom"><strong>Fecha registro</strong></th> -->
                                    <th name="th_uom"><strong>Unidad de medida</strong></th>
                                    <th name="th_cantidad"><strong>Cantidad entregada</strong></th>
                                </tr>
                            </thead>
                            <tbody>                                
                                <t t-foreach="o.x_studio_no_lote" t-as="line">
                                    <tr t-if="line.qty_done != 0">
                                        <tr t-if="line.date.strftime('%d/%m/%Y %H:%M') == c_date">
                                            <td name="td_producto">
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td name="td_lote">
                                                <span t-field="line.lot_id"/>
                                            </td>
                                            <!-- <td name="td_cdate">
                                                <span t-field="line.date"/>
                                            </td> -->
                                            <td name="td_uom">
                                                <span t-field="line.product_uom_id"/>
                                            </td>
                                            <td name="td_cantidad">
                                                <span t-field="line.qty_done"/>                                           
                                            </td>
                                        </tr>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <!-- <div class="col-5 bm-2">
                            <strong>Fecha de impresion:</strong>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')" class="m-0"/>                               
                        </div> -->
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>