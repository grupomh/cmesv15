<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="aged_reports_filter_info_template" inherit_id="account_reports.filter_info_template">
            <xpath expr="//div/div[2]" position="inside">
                <div class="col-12">
                <t t-if="options.get('comercial') != None">
                    Comercial:
                    <t t-set="comercial_value" t-value="'All'"/>
                    <t t-foreach="options['selected_comercial']" t-as="comercial_name">
                        <t t-set="comercial_value" t-value="''"/>
                        <t t-esc="comercial_name"/>
                    </t>
                    <t t-esc="comercial_value"/>
                </t>
            </div>
            </xpath>
        </template>
    </data>
</odoo>