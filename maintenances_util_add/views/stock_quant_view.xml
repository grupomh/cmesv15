<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_view_quant_search_view" model="ir.ui.view">
            <field name="name">stock.quant.search.inherit</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.quant_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='on_hand']" position="after">
                    <separator/>
                    <filter name='repuest' string="Repuestos" domain="[('location_id','=',655)]" context="{}"/>
                    <filter name='product_filter' string="Productos" domain="[('location_id','!=',655)]" context="{}"/>
                </xpath> 

                <field name="lot_id" position="after">
                    <field name="description" string="Descripcion"/>
                </field>                                
            </field>
        </record>


        <record id="inherit_view_stock_quant_tree_editable" model="ir.ui.view">
            <field name="name">view.stock.quant.tree.editable.inherit</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="description" string="Descripcion" optional="hide"/>
                </field>                                
            </field>
        </record>



        <record model="ir.actions.server" id="action_view_quants_r">
            <field name="name">Inventory repuest</field>
            <field name="model_id" ref="model_stock_quant"/>
            <field name="state">code</field>
            <field name="code">
                action = model.with_context(
                    search_default_internal_loc=1,
                    search_default_productgroup=1,
                    search_default_locationgroup=1,
                    search_default_repuest=1,
                ).action_view_quants_r()
            </field>
        </record>
        
        <menuitem id="inventary_view_maintenance" name="Inventario repuestos"
              parent="maintenance.menu_maintenance_title" 
              action="action_view_quants_r"
              sequence="3"/>
        
    </data>
</odoo>