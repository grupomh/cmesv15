<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_view_product_template_tree" model="ir.ui.view">
            <field name="name">view.product.template.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="purchase_method" position="after">
                    <field name="sum_average_purchase" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </field>                
            </field>
        </record>
    </data>
</odoo>