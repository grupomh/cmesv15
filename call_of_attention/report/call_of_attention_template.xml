<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="action_report_call_of_attention_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page"> 
                        <div class="oe_structure"/>
                        <h6>Ref. # <span t-field="o.name"/></h6>
                        <h2 class="col-11 bm-2 text-center">AVISO DE NO CONFORMIDAD</h2> 
                        <div id="informations" class="row mt32 mb32">
                            <div class="col-4 bm-2">
                                <strong>Fecha:</strong>
                                <p t-field="o.date" class="m-0"/>
                            </div>
                            <div class="col-4 bm-2">
                                <strong>Nombre:</strong>
                                <p t-field="o.employee_id" class="m-0"/>
                            </div>
                            <div class="col-4 bm-2">
                                <strong>Area:</strong>
                                <p t-field="o.area" class="m-0"/>
                            </div>
                        </div>
                        <div id="informations2" class="row mt32 mb32">                            
                            <h5 class="col-11 bm-2 text-center">Tipo de Incumplimiento:</h5>                            
                        </div>
                        <div id="informations3" class="row mt32 mb32">
                            <div t-if="o.type_bpm" class="col-3 bm-2 text-center">
                                <h6>BPMs: </h6>
                                <img src='/call_of_attention/static/src/img/check-solid.svg' style="max-height: 25px;"/>
                                <p t-field="o.bpm_selec"/>
                            </div>

                            <div t-if="o.type_ino" class="col-3 bm-2 text-center">
                                <h6>Inocuidad: </h6>
                                <img src='/call_of_attention/static/src/img/check-solid.svg' style="max-height: 25px;"/>
                                <p t-field="o.ino_selec"/>
                            </div>

                            <div t-if="o.type_calidad" class="col-3 bm-2 text-center">
                                <h6>Calidad: </h6>
                                <img src='/call_of_attention/static/src/img/check-solid.svg' style="max-height: 25px;"/>
                                <p t-field="o.cali_selec"/>
                            </div>

                            <div t-if="o.type_mante" class="col-3 bm-2 text-center">
                                <h6>Mantenimiento: </h6>
                                <img src='/call_of_attention/static/src/img/check-solid.svg' style="max-height: 25px;"/>
                                <p t-field="o.mante_selec"/>
                            </div>

                            <div t-if="o.type_comp" class="col-3 bm-2 text-center">
                                <h6>Comportamiento: </h6>
                                <img src='/call_of_attention/static/src/img/check-solid.svg' style="max-height: 25px;"/>
                                <p t-field="o.comp_selec"/>
                            </div>

                            <div t-if="o.type_otr" class="col-3 bm-2 text-center">
                                <h6>Otros: </h6>
                                <img src='/call_of_attention/static/src/img/check-solid.svg' style="max-height: 25px;"/>
                            </div>
                            
                        </div>
                        <div id="informations4" class="row mt32 mb32">
                            <div class="col-11 bm-2">
                                <h4>Descripcion: </h4>
                                <span t-field="o.description"/>
                            </div>
                        </div>

                        <div style="position:absolute;top:850px; page-break-inside: avoid;" class="row mt32 mb32">
                            <div class="col-9 bm-2 text-center">
                                <h6>Firma: ___________________________</h6>                                
                                <p t-field="o.employee_id"/>
                            </div>
                            <div class="col-11 bm-2 text-center">
                                <h6>Firma: ___________________________</h6>                                
                                <p t-field="o.create_uid"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>        
    </template>

</odoo>