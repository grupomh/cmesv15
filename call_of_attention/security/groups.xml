<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!--Category groups-->
        <record id="category_call_of_attention" model="ir.module.category">
            <field name="name">Llamado de atencion</field>
            <field name="description">Categoria llamado de atencion</field>
            <field name="sequence">10</field>
        </record>
    <!--Groups segurity-->
        <record id="group_call_of_attention_user" model="res.groups">
            <field name="name">Permiso creacion e impresion</field>
            <field name="category_id" ref="call_of_attention.category_call_of_attention"/>
        </record>
        <record id="group_call_of_attention_manager" model="res.groups">
            <field name="name">Permiso firma</field>
            <field name="category_id" ref="call_of_attention.category_call_of_attention"/>
        </record>
        <record id="group_call_of_attention_manager_super" model="res.groups">
            <field name="name">Todos los permisos</field>
            <field name="category_id" ref="call_of_attention.category_call_of_attention"/>
        </record>

        

    <!--Rules multicompaÃ±ia-->
        <record model="ir.rule" id="call_of_attention_multi_company_rule">
            <field name="name">call of attention multi company rules</field>
            <field name="model_id" ref="model_call_of_attention"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>
        
    </data>
</odoo>