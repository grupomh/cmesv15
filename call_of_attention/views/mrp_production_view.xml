<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_view_mrp_production_form" model="ir.ui.view">
            <field name="name">mrp.production.view.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <button name="action_toggle_is_locked" position="after">                
                    <button name="button_call_of_attention_action" type="object" string="Llamado de atencion" attrs="{'invisible': ['|', '|', ('state', 'in', ('cancel')), ('id', '=', False), ('is_locked', '=', False)]}"/>
                </button>
                <div name="button_box" position="after">
                    <button name="call_of_attention_action_open_" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('count_call_of_atention', '=', 0)]}" context="{'search_default_production_id': active_id}">
                        <div class="o_stat_info">
                            <span class="o_stat_value">
                             <field name="count_call_of_atention"/>
                            </span>
                            <span class="o_stat_text">Llamado de atencion</span>
                        </div>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>