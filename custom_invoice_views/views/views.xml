<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Own Customer Invoices-->
        
        <record id="action_my_own_move_out_invoice_type" model="ir.actions.act_window">
            <field name="name">Facturas</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_invoice_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('type', '=', 'out_invoice'), ('invoice_user_id', '=', context.get('uid'))]</field>
            <field name="context">{'default_type': 'out_invoice'}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a customer invoice
              </p><p>
                Create invoices, register payments and keep track of the discussions with your customers.
              </p>
            </field>
        </record>

        <menuitem
            id="menu_action_my_own_move_out_invoice_type"
            action="action_my_own_move_out_invoice_type"
            parent="account.menu_finance_receivables"
            sequence="0"
            groups="custom_invoice_views.group_my_own_invoices"/>

        <menuitem
            id="account.menu_action_move_out_invoice_type"
            action="account.action_move_out_invoice_type"
            parent="account.menu_finance_receivables"
            sequence="1"
            groups="custom_invoice_views.group_manager_invoices"/>
    </data>
</odoo>