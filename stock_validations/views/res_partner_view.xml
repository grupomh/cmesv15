<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_extends" model="ir.ui.view">
            <field name="name">res.partner.purchase.form.extends</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <group name="purchase" position="inside">
                    <field name="is_retroactive_invoice"/>
                </group>
            </field>
    </record>

    <record id="view_product_product_form_extends" model="ir.ui.view">
            <field name="name">product.product.form.extends</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <group name="packaging" position="inside">
                    <field name="cupons_ids" readonly="1"/>
                    <field name="is_promotion"/>
                </group>
            </field>
    </record>
</odoo>