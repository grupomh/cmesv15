<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- mrp.production inherit form view -->
        <record id="mrp_production_form_view_extend" model="ir.ui.view">
            <field name="name">mrp.production.form.extend</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <button name="button_scrap" position="after">
                    <button name="button_reproceso" type="object" string="Reproceso" attrs="{'invisible': ['|', ('state', 'in', ('cancel', 'draft')), ('is_locked', '=', False)]}"/>
                </button>
            </field>
        </record>

        <record id="mrp_production_tree_view_extend" model="ir.ui.view">
            <field name="name">mrp.production.tree.extend</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="location_src_id"/>
                    <field name="location_dest_id"/>
                </field>
            </field>
        </record>


    </data>
</odoo>