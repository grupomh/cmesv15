<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_account_payments_move_document">
        <t t-call="web.html_container">
            <!--<t t-call="web.basic_layout">-->
                <t t-foreach="values" t-as="docu">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <link href="/l10n_gt_financial_reports/static/src/css/style.css" rel="stylesheet"/>
                            <link href="/l10n_gt_financial_reports/static/src/css/common.css" rel="stylesheet"/>
                            <table>
                                <t t-call="l10n_sv_financial_reports.custom_header_sv_tmp"/>
                                <tbody>
                                    <t t-set="sum_debit" t-value="0.00"/>
                                    <t t-set="sum_credit" t-value="0.00"/>
                                    <t t-foreach="docu.get('lines',[])" t-as="aml">
                                        <t t-if="aml.get('account_group', False)">
                                            <tr>
                                                <td style="text-align: left;">
                                                    <strong>
                                                        <span t-if="aml.get('account_group_code', False)" t-esc="aml.get('account_group_code', False)"/>
                                                    </strong>
                                                </td>
                                                <td style="text-align: left;">
                                                    <strong>
                                                        <span t-esc="aml.get('account_group', False)"/>
                                                    </strong>
                                                </td>
                                                <td style="text-align: right;"/>
                                                <td style="text-align: right;">
                                                    <span t-if="aml.get('debit', 0.00) &gt; 0.00" t-esc="aml.get('debit', 0.00)" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                </td>
                                                <td style="text-align: right;">
                                                    <span t-if="aml.get('credit', 0.00) &gt; 0.00" t-esc="aml.get('credit', 0.00)" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td style="text-align: left;">
                                                <strong>
                                                    <span t-esc="aml.get('account_code', '')"/>
                                                </strong>
                                            </td>
                                            <td style="text-align: left;">
                                                <strong>
                                                    <span t-esc="aml.get('account', '')"/>
                                                </strong>
                                            </td>
                                            <td style="text-align: right;">
                                                <t t-if="not aml.get('aml_reconciled', False)">
                                                    <span t-if="aml.get('debit', 0.00) > 0.00" t-esc="aml.get('debit', 0.00)" t-options='{"widget": "float", "precision": 2}'/>
                                                    <span t-if="aml.get('credit', 0.00) > 0.00" t-esc="aml.get('credit', 0.00)" t-options='{"widget": "float", "precision": 2}'/>
                                                </t>
                                            </td>
                                            <td style="text-align: right;">
                                                <!--<span t-if="aml.get('debit', 0.00) &gt; 0.00" t-esc="aml.get('debit', 0.00)" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>-->
                                            </td>
                                            <td style="text-align: right;">
                                                <!--<span t-if="aml.get('credit', 0.00) &gt; 0.00" t-esc="aml.get('credit', 0.00)" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>-->
                                            </td>
                                            <t t-set="sum_debit" t-value="sum_debit + aml.get('debit', 0.00)"/>
                                            <t t-set="sum_credit" t-value="sum_credit + aml.get('credit', 0.00)"/>
                                        </tr>
                                        <t t-foreach="aml.get('aml_reconciled', False)" t-as="aml_rec">
                                            <tr>
                                                <td style="text-align: left;">
                                                </td>
                                                <td style="text-align: left;">
                                                    <span t-esc="aml_rec.get('account', '')"/>
                                                </td>
                                                <td style="text-align: right;">
                                                    <span t-esc="aml_rec.get('partial', 0.00)" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                                </td>
                                                <td style="text-align: right;">
                                                </td>
                                                <td style="text-align: right;">
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <tr>
                                        <td style="text-align: left;"/>
                                        <td style="text-align: left;"/>
                                        <td style="text-align: right;"/>
                                        <td style="text-align: right; border-top: 1px solid black;">
                                            <span t-if="sum_debit &gt; 0.00" t-esc="sum_debit" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                        </td>
                                        <td style="text-align: right; border-top: 1px solid black;">
                                            <span t-if="sum_credit &gt; 0.00" t-esc="sum_credit" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                        </td>
                                    </tr>
                                </tbody>
                                <t t-call="l10n_sv_financial_reports.custom_footer_sv_tmp"/>
                            </table>
                        </div>
                    </t>
                </t>
        </t>
    </template>
</odoo>