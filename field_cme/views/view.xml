<odoo>
    <data>
        <record model="ir.ui.view" id="field_invoice_sv">
            <field name="name">field.invoice.sv</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name = 'ref' position="after">                      
                    <field name="invoice_customer" attrs="{'invisible':[('company_id','not in',['4','32','22']),('type','not in',['out_invoice','out_refund'])]}"/>
                    <field name="invoice_suplier_resolution" attrs="{'invisible':[('company_id','not in',['4','32','22']),('type','not in',['in_invoice','in_refund'])]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>