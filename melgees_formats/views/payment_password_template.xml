<odoo>
    <data>
        <template id="payment_password_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <span t-esc="o.partner_id.name"/>
                                </div>
                            </div>
                            <div class="row" style="height:80px;">
                                <table class="col-12">
                                        <td t-esc="o.invoice_date"/>
                                        <td class="text-center" t-esc="o.name"/>
                                        <td class="text-right" t-esc="o.amount_total"/>
                                    <tr>
                                        <td class="text-right" t-esc="o.amount_total" colspan="3"/>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>