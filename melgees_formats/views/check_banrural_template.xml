<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <template id="check_banrural_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="row">
                                <div class="col-9">
                                    <span t-esc="'%s, %s'%( o.partner_id.state_id.name, o.payment_date.strftime('%d/%m/%Y') )"/>
                                </div>
                                <div class="col-3">
                                    <span t-esc="o.amount"/>    
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span t-esc="o.partner_id.name"/> 
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <span t-esc="o._get_num2words(o.amount)"/> 
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-5">
                                    <span t-esc="o.name"/> 
                                </div>
                            </div>
                            <div class="row">
                                <table class="col-12">
                                    <tr t-foreach="o.move_line_ids" t-as="l">
                                        <td t-esc="l.account_id.code"/>
                                        <td t-esc="l.account_id.name"/>
                                        <td t-esc="l.debit"/>
                                        <td t-esc="l.credit"/>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>          
            </t>
        </template>
    </data>
</odoo>