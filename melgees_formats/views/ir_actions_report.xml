<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
       <!-- Check Promerica-->
        <record id="paperformat_check_promerica" model="report.paperformat">
            <field name="name">Check Promerica</field>
            <field name="format">custom</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">4</field>
            <field name="margin_right">10</field>
            <field name="page_height">164</field>
            <field name="page_width">203</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">55</field>
            <field name="dpi">80</field>
        </record>

        <report id="check_promerica_report"
            model="account.payment"
            string="Check Promerica"
            name="melgees_formats.check_promerica_template"
            file="melgees_formats.check_promerica_template"
            report_type="qweb-pdf"
            paperformat='paperformat_check_promerica'
        />
        
        <!-- Check Banrural-->
        <record id="paperformat_check_banrural" model="report.paperformat">
            <field name="name">Check Banrural</field>
            <field name="format">custom</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="page_height">139</field>
            <field name="page_width">217</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">55</field>
            <field name="dpi">80</field>
        </record>

        <report id="check_banrural_report"
            model="account.payment"
            string="Check Banrural"
            name="melgees_formats.check_banrural_template"
            file="melgees_formats.check_banrural_template"
            report_type="qweb-pdf"
            paperformat='paperformat_check_banrural'
        />

        <!-- Payment Password -->

        <record id="paperformat_payment_password" model="report.paperformat">
            <field name="name">Payment Password</field>
            <field name="format">custom</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="page_height">140</field>
            <field name="page_width">108</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">55</field>
            <field name="dpi">80</field>
        </record>

        <report id="payment_password_report"
            model="account.move"
            string="Payment Password"
            name="melgees_formats.payment_password_template"
            file="melgees_formats.payment_password_template"
            report_type="qweb-pdf"
            paperformat='paperformat_payment_password'
        />
    </data>
</odoo>

