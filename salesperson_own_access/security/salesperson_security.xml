<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="own_lead_group" model="res.groups">
      <field name="name">Access to own records in Sales Orders</field>
      <field name="category_id" ref="base.module_category_hidden"/>
      <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
  </record>

  <data noupdate="1">

    <record id="salesperson_orders_filter" model="ir.rule">
        <field name="name">salesperson.orders.filter</field>
        <field ref="sale.model_sale_order" name="model_id"/>
        <field name="groups" eval="[(4, ref('salesperson_own_access.own_lead_group'))]"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
    </record>

    <record id="salesperson_invoice_filter" model="ir.rule">
        <field name="name">salesperson.invoice.filter</field>
        <field ref="account.model_account_move" name="model_id"/>
        <field name="groups" eval="[(4, ref('salesperson_own_access.own_lead_group'))]"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
    </record>

  </data>
</odoo>
