<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

	<record id="view_order_form_rounding_inherit" model="ir.ui.view">
		<field name="name">view.order.form.rounding.inherit</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="apply_rouding" invisible="1"/>
				<field name="amount_rouding" force_save="1" groups="account_invoice_rounding.group_apply_rouding" optional="hide"/>
			</xpath>
		</field>
	</record>

	<record id="view_purchase_form_rounding_inherit" model="ir.ui.view">
		<field name="name">view.purchase.form.rounding.inherit</field>
		<field name="model">purchase.order</field>
		<field name="inherit_id" ref="purchase.purchase_order_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="apply_rouding" invisible="1"/>
				<field name="amount_rouding" force_save="1" groups="account_invoice_rounding.group_apply_rouding" optional="hide"/>
			</xpath>
		</field>
	</record>
	</data>
</odoo>
