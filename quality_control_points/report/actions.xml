<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <report
            id="action_report_register_bpm"
            model="registration.bpm"
            string="Registros de BPMs" 
            report_type="qweb-pdf"
            name="quality_control_points.action_report_registration_bmp"
            file="quality_control_points.action_report_registration_bmp"
            print_report_name="object.name"
        />

        <record id="paperformat_registration_bpm" model="report.paperformat">
            <field name="name">Formato Registros de BPMs</field>
            <field name="default" eval="True"/>
            <field name="format">Letter</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">15</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">12</field>
            <field name="margin_right">12</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">90</field>
            <field name="report_ids" eval="[(4, ref('action_report_register_bpm'))]"/>
        </record>
         
         
   

    </data>
</odoo>