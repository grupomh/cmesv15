<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="action_report_registration_bmp">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <style>
                        .table_header {
                            width:100%;
                            height: 30px;
                            table-layout: fixed;
                            overflow-wrap: break-word;
                            
                        }
                        .row_1, .row_2, .row_3, .row_4 {
                            position: relative;
                            text-align: center;
                            vertical-align: center;
                            top: 10px;
                            height: 25px;
                            border: black 1px solid;
                            font-size: 13px;
                        }

                        .centro{
                            position: relative;
                            text-align: center;
                            vertical-align: center;
                            top: 10px;
                            height: 25px;
                            border: black 1px solid;
                            width:50%;
                            font-size: 13px;
                        }
                        .td_date {
                            width: 60%;
                            text-indent: 22mm;
                            border: black 1px solid;
                        }
                        .td_name {
                            width: 60%;
                            text-indent: 22mm;
                        }
                        .tr-po {
                            height: 25px;
                        }
                        .main-table-po{
                            width:100%;
                            height: 25px;
                            font-size: 13px;                            
                        }
                        .main-table-po2{
                            position: relative;
                            text-align: center;
                            vertical-align: center;
                            width:100%;
                            height: 15px;
                            font-size: 8px;
                            border: black 1px solid;
                        }
                        .main-table-po3{                           
                            width:100%;
                            height: 15px;
                            font-size: 8px;                            
                            border: black 1px solid;
                        }
                        .icon_slec{
                            max-height: 13px;
                        }
                        .celd_icon, .th-header{
                            height: 15px;
                            border-right: black 1px solid;    
                            border-left: black 1px solid;  
                            vertical-align:middle;            
                        }
                        .sign_a{
                            border-bottom:1px solid #000;
                            width: 200px;
                            text-align: center;
                        }
                        .sign_aa{
                            text-align: center;
                            font-size: 13px;
                        }
                        .space{
                            width: 85px;
                            text-align: center;
                        }
                    </style>
                    <div class="page">
                        <div>
                            <!--ENCABEZADO DEL DOCUMENTO-->
                            <table class="table_header">
                                <tr>
                                    <td class="row_1" rowspan="2" style="vertical-align:middle;">
                                        <div>
                                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 60px;" alt="Logo"/>
                                        </div>
                                    </td>
                                    <td class="centro" rowspan="2">
                                        <div>
                                            <center>
                                                <p>
                                                    <b>
                                                    REGISTRO DE CONTROL DE SALUD,                                                    
                                                        
                                                    </b>
                                                </p>
                                                <p>
                                                    <b>
                                                        HIGIENE Y BPM'S DEL PERSONAL
                                                    </b>
                                                </p>
                                                <p>
                                                    <b>
                                                        OPERATIVO 
                                                    </b>
                                                </p>
                                            </center>
                                        </div>
                                    </td>
                                    <td class="row_2" rowspan="2">
                                        <div>
                                            <center>
                                                <p>
                                                    <b>
                                                    CODIGO: R-BPM-006
                                                    </b>
                                                </p>
                                                <p>
                                                    <b>
                                                    VERSION: 3.0
                                                    </b>
                                                </p>
                                                <p>
                                                    <b>
                                                    EMISION: SEP - 2020
                                                    </b>
                                                </p>                                                
                                            </center>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <!--SEGUNDO ENCABEZADO-->
                        <br/>
                        <div>
                            <table class="main-table-po">
                                <tbody>
                                    <tr class="tr-po">
                                        <td class="td-a">
                                            <b>Fecha y hora:</b>
                                        </td>
                                        <td class="td-b">
                                            <span t-field="o.date"/>
                                        </td>
                                        <td class="td-c">
                                            <b>Turno:</b>
                                        </td>
                                        <td class="td-d">
                                            <span t-field="o.turn"/>
                                        </td>
                                    </tr>
                                    <tr class="tr-po">
                                        <td class="td-a">
                                            <b>Responsable de inspeccion:</b>
                                        </td>
                                        <td class="td-b">
                                            <span t-field="o.create_uid"/>
                                        </td>
                                        <td class="td-c">
                                            <b>Referencia:</b>
                                        </td>
                                        <td class="td-d">
                                            <span t-field="o.name"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                         <!--TITULOS DE LA TABLA-->
                        <br/>
                        <div>
                            <table class="main-table-po2">
                                <thead>
                                    <th class="th-header">Empleado</th>
                                    <th class="th-header">Playera/Filipina</th>
                                    <th class="th-header">Gabacha</th>
                                    <th class="th-header">Pantalon</th>
                                    <th class="th-header">Mascarilla/Cofia</th>
                                    <th class="th-header">Zapatos</th>
                                    <th class="th-header">Equipo de segu.</th>
                                    <th class="th-header">Maquillaje/Barba</th>
                                    <th class="th-header">Crema/Locion</th>
                                    <th class="th-header">Uñas/Largas/Pintadas</th>
                                    <th class="th-header">Accesorios</th>
                                    <th class="th-header">Objetos personales</th>
                                    <th class="th-header">Observaciones</th>
                                </thead>
                                <!--LINEAS DE LA TABLA-->
                                <tbody>
                                    <t t-foreach="o.registration_bpm_lines_id" t-as="line">
                                        <tr class="main-table-po3">
                                            <td name="td_empleado" style="vertical-align:middle;"><span t-field="line.employee_id"/></td>
                                            <td name="td_playera" class="celd_icon">
                                                <t t-if="line.t_shirt == True">  
                                                    <img src='/quality_control_points/static/src/img/trues-c.png' class="icon_slec"/>
                                                </t>
                                                <t t-if="line.t_shirt != True">                                             
                                                    <img src='/quality_control_points/static/src/img/falsos-c.png' class="icon_slec"/>
                                                </t>
                                            </td>
                                            <td name="td_gabacha" class="celd_icon">
                                                <t t-if="line.gabacha == True">  
                                                    <img src='/quality_control_points/static/src/img/trues-c.png' class="icon_slec"/>
                                                </t>
                                                <t t-if="line.gabacha != True">                                             
                                                    <img src='/quality_control_points/static/src/img/falsos-c.png' class="icon_slec"/>
                                                </t>
                                            </td>
                                            <td name="td_pants" class="celd_icon">
                                                <t t-if="line.pants == True">  
                                                    <img src='/quality_control_points/static/src/img/trues-c.png' class="icon_slec"/>
                                                </t>
                                                <t t-if="line.pants != True">                                             
                                                    <img src='/quality_control_points/static/src/img/falsos-c.png' class="icon_slec"/>
                                                </t>
                                            </td>
                                            <td name="td_mask_cofia" class="celd_icon">
                                                <t t-if="line.mask_cofia == True">  
                                                    <img src='/quality_control_points/static/src/img/trues-c.png' class="icon_slec"/>
                                                </t>
                                                <t t-if="line.mask_cofia != True">                                             
                                                    <img src='/quality_control_points/static/src/img/falsos-c.png' class="icon_slec"/>
                                                </t>
                                            </td>
                                            <td name="td_shoe" class="celd_icon">
                                                <t t-if="line.shoe == True">  
                                                    <img src='/quality_control_points/static/src/img/trues-c.png' class="icon_slec"/>
                                                </t>
                                                <t t-if="line.shoe != True">                                             
                                                    <img src='/quality_control_points/static/src/img/falsos-c.png' class="icon_slec"/>
                                                </t>
                                            </td>
                                            <td name="td_equip_seg" class="celd_icon">
                                                <t t-if="line.equip_seg == True">  
                                                    <img src='/quality_control_points/static/src/img/trues-c.png' class="icon_slec"/>
                                                </t>
                                                <t t-if="line.equip_seg != True">                                             
                                                    <img src='/quality_control_points/static/src/img/falsos-c.png' class="icon_slec"/>
                                                </t>
                                            </td>
                                            <td name="td_maquillaje" class="celd_icon">
                                                <t t-if="line.maquillaje == True">  
                                                    <img src='/quality_control_points/static/src/img/trues-c.png' class="icon_slec"/>
                                                </t>
                                                <t t-if="line.maquillaje != True">                                             
                                                    <img src='/quality_control_points/static/src/img/falsos-c.png' class="icon_slec"/>
                                                </t>
                                            </td>
                                            <td name="td_locion" class="celd_icon">
                                                <t t-if="line.locion == True">  
                                                    <img src='/quality_control_points/static/src/img/trues-c.png' class="icon_slec"/>
                                                </t>
                                                <t t-if="line.locion != True">                                             
                                                    <img src='/quality_control_points/static/src/img/falsos-c.png' class="icon_slec"/>
                                                </t>
                                            </td>
                                            <td name="td_long_pinter" class="celd_icon">
                                                <t t-if="line.long_pinter == True">  
                                                    <img src='/quality_control_points/static/src/img/trues-c.png' class="icon_slec"/>
                                                </t>
                                                <t t-if="line.long_pinter != True">                                             
                                                    <img src='/quality_control_points/static/src/img/falsos-c.png' class="icon_slec"/>
                                                </t>
                                            </td>
                                            <td name="td_accessory" class="celd_icon">
                                                <t t-if="line.accessory == True">  
                                                    <img src='/quality_control_points/static/src/img/trues-c.png' class="icon_slec"/>
                                                </t>
                                                <t t-if="line.accessory != True">                                             
                                                    <img src='/quality_control_points/static/src/img/falsos-c.png' class="icon_slec"/>
                                                </t>
                                            </td>
                                            <td name="td_object_perso" class="celd_icon">
                                                <t t-if="line.object_perso == True">  
                                                    <img src='/quality_control_points/static/src/img/trues-c.png' class="icon_slec"/>
                                                </t>
                                                <t t-if="line.object_perso != True">                                             
                                                    <img src='/quality_control_points/static/src/img/falsos-c.png' class="icon_slec"/>
                                                </t>
                                            </td>
                                            <td name="td_description" style="width: 40px;"><span t-field="line.description"/></td>                                           
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        <!--FIRMAS DEL DOCUMENTO-->
                        <br/><br/>
                        <div>
                            <table class="firm">
                                <div>
                                    <center>
                                        <tbody>                                        
                                            <tr>
                                                <td class="space"/>
                                                <td class="space"/>
                                                <td class="space"/>
                                                <td class="sign_a"/>
                                                <td class="space"/>
                                                <td class="space"/>
                                                <td class="sign_a"/>
                                            </tr>
                                            <tr>
                                                <td class="space"/>
                                                <td class="space"/>
                                                <td class="space"/>
                                                <td class="sign_aa">Autorizado</td>
                                                <td class="space"/>
                                                <td class="space"/>
                                                <td class="sign_aa">Responsable de inspección</td>
                                            </tr>
                                            <tr>
                                                <td class="space"/>
                                                <td class="space"/>
                                                <td class="space"/>
                                                <td class="space"></td>
                                                <td class="space"/>
                                                <td class="space"/>
                                            </tr>
                                            <tr>
                                                <td class="space"/>
                                                <td class="space"/>
                                                <td class="space"/>
                                                <td class="space"></td>
                                                <td class="space"/>
                                                <td class="space"/>
                                            </tr>                                            
                                        </tbody>
                                    </center>
                                </div>                                
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>