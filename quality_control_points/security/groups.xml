<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!--Categoria de grupos-->
        <record id="category_quality_control" model="ir.module.category">
            <field name="name">Puntos de control calidad</field>
            <field name="description">Categoria para puntos de control</field>
            <field name="sequence">10</field>
        </record>
    <!--Grupos de seguridad-->
        <record id="group_quality_control_user" model="res.groups">
            <field name="name">Usuario normal</field>
            <field name="category_id" ref="quality_control_points.category_quality_control"/>
        </record>
        <record id="group_quality_control_manager" model="res.groups">
            <field name="name">Usuario Administrador</field>
            <field name="category_id" ref="quality_control_points.category_quality_control"/>
        </record>
        <record id="group_register_bpms_user" model="res.groups">
            <field name="name">Registros BPM </field>
            <field name="category_id" ref="quality_control_points.category_quality_control"/>
        </record>
        <!--Rules multicompaÃ±ia-->
        <record model="ir.rule" id="quality_control_points_multi_company_rule">
            <field name="name">quality control points multi company rules</field>
            <field name="model_id" ref="model_quality_control_points"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
