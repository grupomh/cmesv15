<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_weight_sale_order" model="ir.ui.view">
            <field name="name">product.weight.sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='product_uom_qty']" position="after">
                    <field name="weight" groups="product_weight_extend.group_weight"/>
                </xpath>
                <xpath expr="//field[@name='tax_totals_json']" position="after">
                    <field name="margin_percentage" groups="product_weight_extend.group_sale_margin" widget="progressbar"/>

                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='purchase_price']" position="replace">
                    <field name="purchase_price" optional="hide" groups="product_weight_extend.group_sale_margin"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form//field[@name='purchase_price']" position="replace">
                    <field name="purchase_price" groups="product_weight_extend.group_sale_margin" readonly="True"/>
                </xpath>
                <xpath expr="//field[@name='margin']" position="replace">
                    <field name="margin" groups="product_weight_extend.group_sale_margin"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>