<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_weight_purchase_order" model="ir.ui.view">
            <field name="name">product.weight.purchase.order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='product_qty']" position="after">
                    <field name="weight" groups="product_weight_extend.group_weight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>