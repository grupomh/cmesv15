<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="search_template_product">
            <a t-if="options.get('product')" type="button" class="dropdown-toggle account_product_filter"
               data-toggle="dropdown">
                <span class="fa fa-folder-open"/>
                Products
            </a>
            <ul class="dropdown-menu o_filters_menu" role="menu">
                <li class="o_account_report_search js_account_product_m2m"/>
            </ul>
        </template>

        <template id="search_template" inherit_id="account_reports.search_template">
            <xpath expr="//div[@class='btn-group dropdown o_account_reports_filter_analytic']" position="after">
                <div class="btn-group o_dropdown o_account_reports_filter_partner" t-if="options.get('product')">
                    <t t-call="kardex_report.search_template_product"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
