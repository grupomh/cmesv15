<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_generate_file_form" model="ir.ui.view">
        <field name="name">wizard.generate.file.form</field>
        <field name="model">wizard.generate.file</field>
        <field name="arch" type="xml">
            <form string="Ricoh Files">
                <group>
                    <field name="txt_filename" invisible="1"/>
                    <field name="file" filename="txt_filename" nolabel="1"/>
                </group>
                <group>
                    <field name="invoice_ids" widget="many2many_tags" force_save="1" readonly="1"/>
                </group>
                <footer>
                    <button name="generate_file" string="Send" class="btn-primary" type="object"/>
                    <button string="Close" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

