<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="account_move_view_extends">
            <field name="name">account.moveview.extends</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="invoice_origin" position="after">
                    <field name="count_print" force_save="1"/>
                </field>
                <xpath expr="//button[@id='account_invoice_payment_btn']" position="after">
                    <button name="print_ricoh_files" class="oe_highlight" string="Imprimir Ricoh" type="object" groups="ricoh_printers.group_print_ricoh_files" 
                    attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
