<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record model="ir.ui.view" id="view_company_view_extends">
            <field name="name">view.company.view.extends</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page name="ricoh_page" string="Ricoh Configuration" groups="ricoh_printers.group_ricoh_manager">
                        <group  string="RICOH Configuration">
                            <group>
                                <field name="ricoh_devices"/>
                            </group>
                            <group>
                                <field name="ricoh_type" attrs="{'invisible': [('ricoh_devices', '=', False)]}"/>
                                <field name="device_port" attrs="{'invisible': ['|', ('ricoh_devices', '=', False), ('ricoh_type', '=', 'PATH')]}"/>
                                <field name="device_path" attrs="{'invisible': ['|', ('ricoh_devices', '=', False), ('ricoh_type', '=', 'LPD')]}"/>
                            </group>
                            <group>
                                <field name="ricoh_user" attrs="{'invisible': ['|', ('ricoh_devices', '=', False), ('ricoh_type', '=', 'LPD')]}"/>
                                <field name="ricoh_password" password="True" attrs="{'invisible': ['|', ('ricoh_devices', '=', False), ('ricoh_type', '=', 'LPD')]}"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.ui.view" id="view_journal_view_extends">
            <field name="name">view.journal.view.extends</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page name="ricoh_page" string="Ricoh" attrs="{'invisible': [('type', 'not in', ('sale', 'purchase'))]}" groups="ricoh_printers.group_ricoh_manager">
                        <group  string="Documentos">
                            <group>
                                <field name="active_ricoh"/>
                                <field name="ricoh_type" attrs="{'invisible': [('active_ricoh', '=', False)], 'required': [('active_ricoh', '=', True)]}"/>
                                <field name="is_exento" attrs="{'invisible': [('active_ricoh', '=', False)]}"/>
                                <field name="resolution_number" attrs="{'invisible': [('active_ricoh', '=', False)], 'required': [('active_ricoh', '=', True)]}"/>
                                <field name="serie" attrs="{'invisible': [('active_ricoh', '=', False)], 'required': [('active_ricoh', '=', True)]}"/>
                            </group>
                            
                            <!--<group>
                                
                            </group>
                            <group>
                                
                            </group>-->
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <!--Branch Extends-->
        <record model="ir.ui.view" id="view_res_branch_view_extends">
            <field name="name">view.branch.view.extends</field>
            <field name="model">res.branch</field>
            <field name="inherit_id" ref="branch.branch_res_branch_view_form"/>
            <field name="arch" type="xml">
                <field name="address" position="after">
                    <field name="printer_name"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
