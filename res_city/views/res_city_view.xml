<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- City -->
        <record id="view_res_city_tree" model="ir.ui.view">
            <field name="name">res.city.tree</field>
            <field name="model">res.city</field>
            <field name="arch" type="xml">
                <tree string="Municipio">
                    <field name="name"/>
                    <field name="parent_id" options="{'no_create': True}"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="view_res_city_form" model="ir.ui.view">
            <field name="name">res.city.form</field>
            <field name="model">res.city</field>
            <field name="arch" type="xml">
                <form string="Municipio">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="first" col="2">
                            <field name="parent_id" class="oe_inline"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_res_city_search" model="ir.ui.view">
            <field name="name">res.city.search</field>
            <field name="model">res.city</field>
            <field name="arch" type="xml">
                <search string="Country">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <group string="Group By">
                        <filter name="group_parent_id" string="Departamento" context="{'group_by': 'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_res_city" model="ir.actions.act_window">
            <field name="name">Municipios</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.city</field>
            <field name="view_id" ref="view_res_city_tree"/>
            <field name="help">Municipios.</field>
        </record>

        <menuitem action="action_res_city" id="menu_root_city" parent="contacts.menu_localisation"/>

		<record id="res_partner_form_view_inherit" model="ir.ui.view">
			<field name="name">res.partner.form.view.inherit</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<field name="city" position="replace">
                    <field name="city" placeholder="City" invisible="1" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                    <field name="city_id" placeholder="Municipio" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
				</field>
			</field>
		</record>
    </data>
</odoo>
